@model ParkingHere.Dominio.Veiculo

@{
    ViewBag.Title = " ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErroCriacao"] != null)
{
    <div class="alert alert-danger" role="alert">@TempData["ErroCriacao"].ToString()</div>
}

<div class="col-md-12">
    <h3>Ocupar Vaga</h3>
</div>

<div class="col-md-12">
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Placa, htmlAttributes: new { @class = "control-label col-md-2 col-lg-1" })
            <div class=" col-md-12">
                <div class="col-xs-2">
                    @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control box-shadow", style = "float: left", placeholder="ABC-1234" } })
                </div>
                <label id="placaErroMensagem" class="label label-danger" style="float: left; margin: 8px;">Placa já cadastrada!</label>
                @Html.ValidationMessageFor(model => model.Placa, "", new {@class = "text-danger", style = "float: left; margin: 8px;"})
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Tipo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="dropdown col-md-10">
                <select class="btn btn-default dropdown-toggle box-shadow" name="Tipo">
                    <option value="Carro">Carro</option>
                    <option value="Moto">Moto</option>
                </select>
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <div class="form-group">
            <div class="col-md-12 col-md-offset-1">
                <input type="submit" value="Confirmar" class="btn btn-success box-shadow" id="sucess-message"/>
            </div>
        </div>
        </div>
    }
</div>

<div class="col-md-12">
    @Html.ActionLink("Voltar", "Index", "Estacionamento", new { }, new { @class = "btn btn-primary box-shadow" })
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
