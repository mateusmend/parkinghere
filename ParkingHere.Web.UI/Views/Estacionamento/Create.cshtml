@model ParkingHere.Dominio.Estacionamento

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<div class="col-md-12">
    <h2>Primeiro Acesso</h2>
    <h4>Cadastre seu Estacionamento</h4>
</div>

<div class="col-md-12" id="alr-estacionamento">
    <span class="alert alert-danger">
        Estacionamento já cadastrado!
    </span>
    <br />
    <br />
</div>

<div class="col-md-12">
    @Html.ActionLink("Ir para Estacionamento", "Index", new { }, new { @class = "btn btn-primary box-shadow", @id = "btn-voltar" })
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">   
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control box-shadow", placeholder = "Digite o nome do Estacionamento" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Vagas para Carros", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroVagas, new { htmlAttributes = new { @class = "form-control box-shadow tamanho-form", placeholder="0" } })
                @Html.ValidationMessageFor(model => model.NumeroVagas, "", new { @class = "text-danger" })
            </div> 
        </div>
        <div class="form-group">
            @Html.Label("Vagas para Motos", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroVagasMoto, new { htmlAttributes = new { @class = "form-control box-shadow tamanho-form", placeholder = "0" } })
                @Html.ValidationMessageFor(model => model.NumeroVagasMoto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Vagas para PcD", htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroVagasDef, new { htmlAttributes = new { @class = "form-control box-shadow tamanho-form", placeholder = "0" } })
                @Html.ValidationMessageFor(model => model.NumeroVagasDef, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-lg-offset-4">
            <input type="submit" value="Cadastrar" class="btn btn-success box-shadow" />
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
